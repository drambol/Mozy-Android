<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:padding="2dip"
    android:layout_gravity="fill_horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_gravity="fill_vertical">
        <TextView android:id="@+id/name" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingLeft="8dip"
            android:textAppearance="@style/SettingsListViewTextAppearance"
            android:lines="1"
            android:ellipsize="middle"
            android:scrollHorizontally="true"
            android:layout_gravity="top|fill_horizontal"/>
        <TextView android:id="@+id/subtitle" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:paddingLeft="8dip"
            android:textAppearance="@style/SettingsListViewSubtitleAppearance"
            android:layout_gravity="bottom|fill_horizontal"/>
    </LinearLayout>

</LinearLayout>
