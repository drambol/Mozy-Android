<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:padding="2dip"
    android:layout_gravity="fill_horizontal">

    <ImageView android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="10dip"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/ListViewTextAppearance"
            android:text="@+id/name"
            android:ellipsize="end"
            android:lines="1"
            android:layout_gravity="center_vertical"/>
        <TextView android:id="@+id/quota"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/ListViewSecondaryTextAppearance"
            android:text="@+id/quota"
            android:lines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"/>
        <TextView android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/ListViewSubtitleAppearance"
            android:lines="1"
            android:text="@+id/subtitle"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:layout_gravity="bottom|fill_horizontal"/>
    </LinearLayout>

</LinearLayout>
