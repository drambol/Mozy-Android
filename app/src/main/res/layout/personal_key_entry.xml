<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="TextView" 
        android:id="@+id/textbox_title" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginBottom="6dip"
        android:textAppearance="@style/SettingsCheckboxTitleViewTextAppearance">
    </TextView>
    <EditText android:inputType="textPassword" android:id="@+id/pkEditText" android:layout_marginLeft="15dip" android:layout_marginRight="15dip" android:layout_height="wrap_content" android:layout_width="match_parent">
        <requestFocus></requestFocus>
    </EditText>
        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="6dip">
         
         <CheckBox 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="15dip"
            android:text="CheckBox" 
            android:id="@+id/pkCheckBox">
         </CheckBox>
    </RelativeLayout>
    
</LinearLayout>
